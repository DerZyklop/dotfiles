for i in ${PROJECTDIRS[*]}
do
  if [[ -d $i ]]; then
    PROJECTS+="$(ls $i | tr "\n" " ")"
  fi
done

complete -W "$PROJECTS" p

complete -F _todo t

# TODO: https://github.com/angular/angular-cli/issues/11043
# TODO: https://github.com/robbyrussell/oh-my-zsh/pull/5855
NG_COMMANDS="add build config doc e2e generate help lint new run serve test update version xi18n"
complete -W "$NG_COMMANDS" ng

alias nggenerate="ng generate"

NG__GENERATE_COMMANDS="appShell
    application
    class
    component
    directive
    enum
    guard
    interface
    library
    module
    pipe
    service
    serviceWorker
    universal"
complete -W "$NG__GENERATE_COMMANDS" "nggenerate"
