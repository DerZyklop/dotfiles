#!/bin/sh

if [[ $# -lt 1 ]]; then
	echo "${red}Please provide a commit message${reset}";
	exit;
fi

array=(
	"ðŸ› Bugfix"
	"âœ¨ Feature"
	"ðŸ’… UI Beautification"
	"ðŸ“• Story"
	"ðŸš‘ Hotfix | Hack"
	" - NOTHING - "
	"ðŸŽ¨ Lint | Improving structure of code"
	"ðŸ“ Docs"
	"â™»ï¸ Refactoring"
	"ðŸš§ Work in progress"
	"ðŸ”¥ Removing code or files"
	"âš¡ï¸ Performance"
	"ðŸ’¬ Text changes"
	"ðŸ“¦ npm dependencies"
	"ðŸ—ƒ Database related stuff"
	"ðŸ”§ Change scripts of config"
	# NOTE: More of them here: gitmoji --list
)
function getEmojiByKey() {
	if [[ $1 == '-' ]]; then
		echo ''
	else
		echo $1
	fi
}
echo "${orange}What kind of commit is this?${reset} `echo $'\n'`";
PS3='Please enter your choice: '
select opt in "${array[@]}"
do
	EMOJI=$(getEmojiByKey $opt)
	echo $SELECTED_EMOJI
	break
done
COMMIT_MESSAGE="$EMOJI $@"

echo '=>> git commit -m "'$COMMIT_MESSAGE'"';
git commit -m "$COMMIT_MESSAGE";
