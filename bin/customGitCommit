#!/bin/sh

if [[ $# -lt 1 ]]; then
	echo "${red}Please provide a commit message${reset}";
	exit;
fi

# If environment var GIT_ICON_ARRAY is not set
# Get fallback
if [ -z "$GIT_ICON_ARRAY" ];
then GIT_ICON_ARRAY=(
	"ðŸ› bugfix | tests"
	"ðŸ’… ui"
	"âœ¨ feature"
	"ðŸ§¹ cleanup"
	"ðŸ“• story"
	" - NOTHING - "
	"ðŸŒ i18n | l10n"
	"ðŸ’¬ text"
	"ðŸŽ¨ lint | code-structure"
	"ðŸ“ docs | readme"
	"â™»ï¸ refactoring"
	"ðŸš§ work in progress"
	"ðŸ”¥ removing code or files"
	"âš¡ï¸ performance"
	"ðŸ—ƒ database | api"
	"ðŸ“¦ npm | node"
	"ðŸ”§ scripts or config"
	# NOTE: More of them here: gitmoji --list
); fi

function getEmojiByKey() {
	if [[ $1 == '-' ]]; then
		echo ''
	else
		echo $1
	fi
}

echo "${orange}Ticket NR? (default: NO_JIRA_ISSUE)${reset} `echo $'\n'`";
PS3='Please enter your choice: '
read TICKET_NR
echo

if [[ $TICKET_NR ]]; then
  TICKET_NR="$TICKET_NR";
else
  TICKET_NR="NO_JIRA_ISSUE";
fi

echo "${orange}What kind of commit is this?${reset} `echo $'\n'`";
PS3='Please enter your choice: '
select opt in "${GIT_ICON_ARRAY[@]}"
do
	EMOJI=$(getEmojiByKey $opt)
	echo $SELECTED_EMOJI
	break
done

read -p "${orange}Skip CI?${reset} [${green}y${reset}/${red}N${reset}] " -n 1 -r
if [[ $REPLY =~ ^[Yy]$ ]]; then
	SKIP_CI='[skip ci]'
	echo ''
fi

COMMIT_MESSAGE="$TICKET_NR $EMOJI $@ $SKIP_CI"

echo '=>> git commit -m "'$COMMIT_MESSAGE'"';
git commit -m "$COMMIT_MESSAGE";
