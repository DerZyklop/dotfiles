#!/bin/sh

if ! [ -x "$(command -v blink1-tool)" ]; then
  echo 'blink1-tool is not installed'
  exit
fi;

getColorForState() {
  if [ "$PRIO" = "1" ]; then
    GREEN="#00ff00"
  else
    GREEN="#2f4400"
  fi

  case $STATE in
    success) echo $GREEN;;
    danger) echo "#ff0000";;
    warning) echo "#7f631e";;
    info) echo "#444444";;
    pink) echo "#872f55";;
    *) echo "#000000";;
  esac
}

getSpeedForState() {
  SLOW=1500
  FAST=100

  case $STATE in
    success) echo $SLOW;;
    danger) echo $FAST;;
    warning) echo $SLOW;;
    info) echo $SLOW;;
    *) echo $SLOW;;
  esac
}

if [ "$1" == 'off' ]; then
  echo "Turn LEDs off"
  echo "Note: This blink1 state does not get saved for the command »blink1 previous«."
  blink1-tool -q --off --id 0,1,2,3
elif [ "$1" == 'previous' ]; then
  PRIO=$(store get PRIO);
  STATE=$(store get STATE);
elif [ $# -lt 2 ]; then
  echo "––––––––––––––––"
  echo "USAGE: blink1 previous"
  echo "or"
  echo "USAGE: blink1 prio state"
  echo "Sets blink1 devices to defined colors"
  echo ""
  echo "Possible prios:"
  echo "1, 2 or 3"
  echo ""
  echo "Possible states:"
  echo "success"
  echo "info"
  echo "warning"
  echo "danger"
  echo "––––––––––––––––"
else
  PRIO=$1;
  STATE=$2;

  DEVICE_COUNTER=$(blink1-tool --list | wc -l);
  PRIO_1_IDS=0;
  PRIO_2_IDS=1;
  if [ $DEVICE_COUNTER -gt 3 ]; then
    PRIO_1_IDS=0,1;
    PRIO_2_IDS=2,3;
  fi

  case $PRIO in
		1) ID=$PRIO_1_IDS,$PRIO_2_IDS; LED=1;;
		2) ID=$PRIO_1_IDS; LED=2;;
		3) ID=$PRIO_2_IDS; LED=2;;
	esac

  COLOR=$(getColorForState)
  SPEED=$(getSpeedForState)
	blink1-tool --quiet --millis=$SPEED --id=$ID --led=$LED --rgb=$COLOR

  store set PRIO $PRIO
  store set STATE $STATE
fi;
