#!/bin/sh

# TODO: This can be improved with wildcards
# See: https://github.com/raineorshine/npm-check-updates/releases/tag/v11.2.0

ARRAY=(
  "@storybook/builder-webpack5"
  "@storybook/manager-webpack5"
  "@storybook/addon-essentials"
  "@storybook/addon-actions"
  "@storybook/addon-knobs"
  "@storybook/addon-links"
  "@storybook/addon-notes"
  "@storybook/addon-viewport"
  "@storybook/addons"
  "@storybook/angular"
  "@storybook/cli"
  "@storybook/addon-docs"
)

COMMIT_DESC='';

for i in "${ARRAY[@]}"
do :
  COMMIT_DESC=$(ncu -u $i --target=patch | grep "$i" | grep -o '[0-9].*');
  echo $i
  echo $COMMIT_DESC
done

if [[ $COMMIT_DESC -eq '' ]]; then
  echo "commit message broken: Â»$($COMMIT_DESC)Â«"
  echo "commit message would be:"
  echo "ðŸ“¦ â¬† @storybook/*"
  echo "Changed Verstion number of $1: $COMMIT_DESC"
  exit 1
fi

git a
git commit -m "ðŸ“¦ â¬† @storybook/*" -m "Changed Verstion number of $1: $COMMIT_DESC"
