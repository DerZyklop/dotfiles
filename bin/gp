#!/bin/sh
if [ $# -gt 1 ]; then
  echo "USAGE: gp [commit-msg]"
  tput setaf 1
  echo "Maximum one param!"
  tput sgr0
else
  if [ $# -lt 1 ]; then
    echo "Push new commits"
  else
    echo "commit -m $1"
    git commit -m $1
  fi
  BRANCH=$(git branch | sed -n -e 's/^\* \(.*\)/\1/p')
  echo "git push --set-upstream origin ${green}$BRANCH${reset}"
  git push --set-upstream origin $BRANCH
  echo "Push all tags"
  git push --tags
fi
