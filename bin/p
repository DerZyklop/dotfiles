#!/bin/sh
if [ $# -gt 1 ]; then
  echo "USAGE: p projectname"
  tput setaf 1
  echo "Maximum one param!"
  tput sgr0
elif [ $# -lt 1 ]; then
  echo "USAGE: p projectname"
  tput setaf 1
  echo "Minimum one param!"
  tput sgr0
else
  found_it=false
  for i in ${PROJECTDIRS[*]}; do
    if [ -d $i$1 ]; then
      cd $i$1
      found_it=true
    fi
    if [ -f $i$1 ]; then
      unzip -q $i$1 -d $i
      cd $i${1%.*}
      rm -f $i$1
      found_it=true
    fi
  done;
  if [[ "$found_it" = false ]]; then
    tput setaf 1
    echo "-------------------------"
    echo "Error: Project not found!"
    echo "-------------------------"
    tput sgr0
  fi
fi
