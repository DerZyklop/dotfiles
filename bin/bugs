#! /usr/bin/env node


try {
  var file = require(process.cwd()+'/package.json');

  var pkg = JSON.parse(JSON.stringify(file));
  var spawn = require('child_process').spawn;

  if ( pkg.bugs ) {
    if ( pkg.bugs.url ) {
      spawn('open', [pkg.bugs.url]);
    }
  } else {
    console.error("--------------------------------------");
    console.error("Couldnt find the bugs-url for "+pkg.name);
    console.error("--------------------------------------");

    // var prompt = require('prompt');
    // prompt.start();

    // prompt.get(['bugs_url'], function (err, result) {
    //   console.log('URL for bugs is now: ' + result.bugs_url);
    // });

  }

} catch (err){

  console.error("--------------------------------------");
  console.error("Couldnt find a package.json");
  console.error("--------------------------------------");

}
