#!/bin/sh

# Put stuff into trash instead of delete them
local path
for path in "$@"; do
  # ignore any arguments
  if [[ "$path" = -* ]]; then :
  else
    local dst=${path##*/}
    # append the time if necessary
    while [ -e ~/.Trash/"$dst" ]; do
      dst="$dst "$(date +%H-%M-%S)
    done
    mv "$path" ~/.Trash/"$dst"
  fi
done
